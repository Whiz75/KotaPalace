<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dcdcdc"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/row_order_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_account_circle_black_18dp"/>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/row_order_no">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/row_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Order no:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/row_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Status"
                    android:textColor="@color/price_color"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/row_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Date"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/row_order_no"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_margin="10dp"
                android:text="id"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/button_bg"
                android:layout_alignParentEnd="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="check" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>